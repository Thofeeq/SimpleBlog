<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="register-form">

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control col-sm-6", placeholder: "Email" %>
    </div>
  
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control col-sm-6", placeholder: "Password" %>
    </div>
  
    <p style="margin-left:18%">
      <%= f.submit "Login", class: "btn btn-primary btn-lg"  %>
    </p>
  </div>
<% end %>
<% if obj.errors.any? %>
  <div class="alert alert-danger">
    <div>
      <h4>
        Encountered <%= pluralize(obj.errors.count, "error") %>
      </h2>
    </div>
    <div>
      <ul>
      <%= obj.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>